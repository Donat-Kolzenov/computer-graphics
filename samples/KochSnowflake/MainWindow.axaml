<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="KochSnowflake.MainWindow"
        Title="{Binding Title}">
    <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="500" />
      <RowDefinition Height="55" />
    </Grid.RowDefinitions>

    <Button Name="DrawKochSnowflakeButton" Grid.Row="1" Height="25" Width="120" Content="Draw koch snowflake" Margin="5 5 5 5"/>

    <ContentControl Name="CustomContentControl" Grid.Row="0" Background="LightGray" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
    
  </Grid>
</Window>
